<div class = "grid grid-cols-6">
    <div class="col-start-3 col-span-2">
        <div id="count-overdue">
        <div class="flex">
        <h5 class="font-semibold">Overdue </h5>
        <span><p class="ml-2"><%= overduetodos.length %></p></span>
        </div>
        <% for (let j=0; j<overduetodos.length; j++){ %>
            <ul class="list-none">
                <li class="Todo-Item">
                    <div class="flex items-center w-fit my-2 px-2 py-1 hover:bg-purple-50">
                        <input id="todo-<%= overduetodos[j].id %>" type="checkbox" class="w-4 h-4 text-blue-600">
                        <label for="todo-<%= overduetodos[j].id %>" class="ml-2 text-sm text-gray-600 cursor-pointer"><%= overduetodos[j].title %></label>
                        <a href="#" class ="hidden trash-icon ml-2">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                            </svg>
                        
                        </a>
                    </div>
                </li>
            </ul>
        <% } %>
        </div>
        
        <div id="count-due-today">
        <div class="flex">
        <h5>Due Today </h5>
        <span><p class="ml-2"><%= todaytodos.length %></p></span>
        </div>
        <% for (let j=0; j<todaytodos.length; j++){ %>
            <ul class="list-none">
                <li class="Todo-Item">
                    <div class="flex items-center w-fit my-2 px-2 py-1 hover:bg-purple-50">
                        <input id="todo-<%= todaytodos[j].id %>" type="checkbox" class="w-4 h-4 text-blue-600">
                        <label for="todo-<%= todaytodos[j].id %>" class="ml-2 text-sm text-gray-600 cursor-pointer"><%= todaytodos[j].title %></label>
                        <a href="#" class ="hidden trash-icon ml-2">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                            </svg>
                        
                        </a>
                    </div>
                </li>
            </ul>
        <% } %>
        </div>

        <div id="count-due-later">
        <div class="flex">
            <h5>Due Later </h5>
            <span style="display: inline;">
            <p class="ml-2"><%= duelatertodos.length %></p>
            </span>
        </div>
        
        <% for (let j=0; j<duelatertodos.length; j++){ %>
            <ul class="list-none">
                <li class="Todo-Item">
                    <div class="flex items-center w-fit my-2 px-2 py-1 hover:bg-purple-50">
                        <input id="todo-<%= duelatertodos[j].id %>" type="checkbox" class="w-4 h-4 text-blue-600">
                        <label for="todo-<%= duelatertodos[j].id %>" class="ml-2 text-sm text-gray-600 cursor-pointer"><%= duelatertodos[j].title %></label>
                        <a href="#" class ="hidden trash-icon ml-2">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                            </svg>
                        
                        </a>
                    </div>
                </li>
            </ul>
        <% } %>
        </div>
    </div>
</div>















